<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/judges_panel" />



    <Button
        android:id="@+id/albums"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        style="@style/PlaylistStyle"
        android:background="@color/albums_section"
        android:text="@string/albums_section"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/podcasts"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        style="@style/PlaylistStyle"
        android:background="@color/podcasts_section"
        android:text="@string/podcasts_section"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/discover"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        style="@style/PlaylistStyle"
        android:background="@color/discover_section"
        android:text="@string/discover_section"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/recommended"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        style="@style/PlaylistStyle"
        android:background="@color/recommended_section"
        android:text="@string/recommended_section"
        android:textAlignment="center"/>


</LinearLayout>